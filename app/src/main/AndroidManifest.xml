<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haram.labelfree">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/labelfree_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/labelfree_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LabelFree">
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.view.IntroActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.view.RegisterActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.view.ProductListActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity> <!-- play-services-ads 17.0.0 이상은 앱 ID 입력 필요 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_ad_id" />

        <activity
            android:name=".ui.view.AboutAppActivity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".ui.view.LabelInfoActivity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:hardwareAccelerated="true" />
    </application>

</manifest>
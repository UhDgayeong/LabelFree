<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="5dp"
        app:strokeColor="#5E4CB7EB"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#85D5E8F1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/productNameTxt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanumgothicextrabold"
                android:textSize="19sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="19sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/productImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/productImg"/>

            <TextView
                android:id="@+id/productCompanyTxt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="롯데칠성"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquarer"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toEndOf="@+id/productImg"
                app:layout_constraintTop_toBottomOf="@+id/productNameTxt"
                android:gravity="center_vertical" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="acitivty"
            type="com.haram.labelfree.ui.view.IntroActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:orientation="vertical"
        tools:context=".ui.view.IntroActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:padding="30dp"
            android:src="@drawable/labelfree_splash2" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_style_white"
            android:fontFamily="@font/nanumgothicbold"
            android:onClick="@{acitivty::goLoginActivity}"
            android:text="로그인"
            android:textColor="@color/mainColor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/btn_style_white"
            android:fontFamily="@font/nanumgothicbold"
            android:onClick="@{acitivty::goRegisterActivity}"
            android:text="회원가입"
            android:textColor="@color/mainColor" />


    </LinearLayout>
</layout>
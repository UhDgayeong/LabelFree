<resources>
    <!-- Base application theme. -->
    <style name="Theme.LabelFree" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!-- 상태바까지 view를 보여줄 수 있다-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TextViewStyle_nanumsquare">
        <item name="fontFamily">@font/nanumsquarer</item>
    </style>

    <!-- EditTextStyle 커스텀 -->
    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <!-- unFocus 상태일 때 밑줄 색 -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Focus 상태일 때 밑줄 색 -->
        <item name="colorControlActivated">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <!-- 커서 색 -->
        <item name="android:textCursorDrawable">@color/white</item>
        <!-- hint 색 -->
        <item name="android:textColorHint">@color/white</item>
        <!-- floating hint 색 -->
        <item name="hintTextColor">@color/white</item>
        <!-- xml 에서 한 속성을 여기서도 할 수 있음 -->
        <item name="helperTextTextColor">@color/white</item>
        <item name="errorTextColor">#EA336D</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

</resources>